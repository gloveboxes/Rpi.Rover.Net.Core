{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "publish",
            "linux": {
                "command": "sh",
                "type": "shell",
                "args": [
                    "-c",
                    "\"dotnet publish -r linux-arm -o bin/linux-arm/publish",
