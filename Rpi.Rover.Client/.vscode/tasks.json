                    "${workspaceFolder}/${workspaceFolderBasename}.csproj\"",
                    ";",
                    "sh",
                    "-c",
                    "\"rsync -rvuz ${workspaceFolder}/bin/linux-arm/publish/ pi@pisense.local:/home/pi/dotnet/${workspaceFolderBasename}\""
                ],
            },
